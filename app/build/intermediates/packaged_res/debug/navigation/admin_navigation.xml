<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.dialastocktaker.ui.admin.AdminHomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_admin_home">
        <action
            android:id="@+id/action_nav_home_to_nav_users"
            app:destination="@id/nav_users" />
        <action
            android:id="@+id/action_nav_home_to_nav_jobs"
            app:destination="@id/nav_jobs" />
        <action
            android:id="@+id/action_nav_home_to_nav_reports"
            app:destination="@id/nav_reports" />
    </fragment>

    <fragment
        android:id="@+id/nav_users"
        android:name="com.example.dialastocktaker.ui.admin.AdminUsersFragment"
        android:label="Users"
        tools:layout="@layout/fragment_admin_users" />

    <fragment
        android:id="@+id/nav_jobs"
        android:name="com.example.dialastocktaker.ui.admin.AdminJobsFragment"
        android:label="Jobs"
        tools:layout="@layout/fragment_admin_jobs" />

    <fragment
        android:id="@+id/nav_reports"
        android:name="com.example.dialastocktaker.ui.admin.AdminReportsFragment"
        android:label="Reports"
        tools:layout="@layout/fragment_admin_reports" />

    <fragment
        android:id="@+id/nav_messages"
        android:name="com.example.dialastocktaker.ui.admin.AdminMessagesFragment"
        android:label="Messages"
        tools:layout="@layout/fragment_admin_messages" />
</navigation>
