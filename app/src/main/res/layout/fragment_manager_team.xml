<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/managerTeamRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Search bar -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search team members" />

    <!-- Chip group for role filter -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:singleSelection="true"
        app:selectionRequired="false"
        android:orientation="horizontal">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCoordinator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coordinator" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanner" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipStocktaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stocktaker" />
    </com.google.android.material.chip.ChipGroup>

    <!-- RecyclerView for team members -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTeam"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:clipToPadding="false"/>

</LinearLayout>
